{{ extends "layout.jet" }}

{{ block documentBody }}
    <h1>List of todos </h1>
    <ul>
        {{ range id,value := . }}
        <li {{ if value.Done }}style="color:red;text-decoration: line-through;"{{ end }}>
            {{value.Text}} <a href="/update/?id={{ id }}">UP</a> | <a href="/remove/id={{ id }}">DL</a>
        </li>
        {{ end }}
    </ul>
{{ end }}